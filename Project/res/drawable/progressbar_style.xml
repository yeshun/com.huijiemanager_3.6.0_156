<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2.0dip" />
            <gradient android:startColor="@color/text_hint" android:endColor="@color/text_hint" android:angle="270.0" android:centerY="2.0" android:centerColor="@color/text_hint" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2.0dip" />
                <gradient android:startColor="@color/menu_background" android:endColor="@color/menu_background" android:angle="270.0" android:centerY="2.0" android:centerColor="@color/menu_background" />
            </shape>
        </clip>
    </item>
</layer-list>